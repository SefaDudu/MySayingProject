@{
}
<a href="/Saying/Modify/" class="btn btn-danger" style="margin-top:30px; margin-bottom:20px;">YENİ SÖZ</a>


<div class="col-8"> 
    <table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>

            <th>
                Sil
            </th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Saying x in Model.Data)
        {


            <tr>

                <td>@x.ID</td>
                <td>@x.Say</td>

                <td><a href="/Saying/Delete/@x.ID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Saying/Modify/@x.ID" class="btn btn-primary">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table> 
 </div>
