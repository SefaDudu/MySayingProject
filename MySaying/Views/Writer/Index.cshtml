@model IDataResult<List<Writer>>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}



<a href="/Writer/Modify/" class="btn btn-danger">Yeni Yazar</a>


<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>
                Sil
            </th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Writer x in Model.Data)
        {


            <tr>

                <td>@x.ID</td>
                <td>@x.FirstName</td>
                <td>@x.LastName</td>
                <td><a href="/Writer/Delete/@x.ID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Writer/Modify/@x.ID" class="btn btn-primary">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>

