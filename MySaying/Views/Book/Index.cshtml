@section scripts{

    <script>

        function openPdf(id) {
            $.post("/Home/GetBook", { id: id }, function (res) {
                $("#pdfModal embed").attr("src", res.pdf);
                $("#pdfModalLabel").html(res.name);
                $('#pdfModal').modal("show");
            })
        }


    </script>



